<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sid.lms.Register_Activity">

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvfname"
        android:text="First Name:"
        android:textSize="22dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etfname"
        android:layout_alignBaseline="@+id/tvfname"
        android:layout_marginLeft="120dp"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvlname"
        android:text="Last Name:"
        android:layout_below="@+id/tvfname"
        android:textSize="22dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etlname"
        android:layout_alignBaseline="@+id/tvlname"
        android:layout_marginLeft="120dp"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvmailid"
        android:text="Mail ID:"
        android:layout_below="@+id/tvlname"
        android:textSize="22dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etmailid"
        android:layout_alignBaseline="@+id/tvmailid"
        android:layout_marginLeft="120dp"
        android:textSize="22dp"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvusername"
        android:text="User Name:"
        android:layout_below="@+id/tvmailid"
        android:textSize="22dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etusername"
        android:layout_alignBaseline="@+id/tvusername"
        android:layout_marginLeft="120dp"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvpassword2"
        android:text="Password:"
        android:layout_below="@+id/tvusername"
        android:textSize="22dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etpassword2"
        android:layout_alignBaseline="@+id/tvpassword2"
        android:layout_marginLeft="120dp"
        android:textSize="22dp"/>


    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvphone"
        android:text="Phone:"
        android:layout_below="@+id/tvpassword2"
        android:textSize="22dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etphone"
        android:layout_alignBaseline="@+id/tvphone"
        android:layout_marginLeft="120dp"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvdepartment"
        android:text="Department:"
        android:layout_below="@+id/tvphone"
        android:textSize="22dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etdepartment"
        android:layout_alignBaseline="@+id/tvdepartment"
        android:layout_marginLeft="120dp"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvsubgroup"
        android:text="Sub group:"
        android:layout_below="@+id/tvdepartment"
        android:textSize="22dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etsubgroup"
        android:layout_alignBaseline="@+id/tvsubgroup"
        android:layout_marginLeft="120dp"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvlocation"
        android:text="Location:"
        android:layout_below="@+id/tvsubgroup"
        android:textSize="22dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etlocation"
        android:layout_alignBaseline="@+id/tvlocation"
        android:layout_marginLeft="120dp"
        android:textSize="22dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bregister"
        android:text="Register"
        android:layout_below="@+id/tvlocation"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
