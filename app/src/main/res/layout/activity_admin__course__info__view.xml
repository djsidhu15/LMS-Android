<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sid.lms.Admin_Course_Info_View">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Info"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course No.:"
        android:textSize="18dp"
        android:id="@+id/tvcourseno"
        android:layout_marginTop="70dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:textSize="18dp"
        android:layout_alignBaseline="@id/tvcourseno"
        android:id="@+id/etcourseno"
        android:background="#F12322"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textSize="18dp"
        android:id="@+id/tvdescription"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvcourseno"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="18dp"
        android:layout_marginLeft="160dp"
        android:layout_alignBaseline="@id/tvdescription"
        android:id="@+id/tvdescription2"
        android:background="#F12322"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration:"
        android:textSize="18dp"
        android:id="@+id/tvduration"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/tvdescription"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="18dp"
        android:layout_marginLeft="160dp"
        android:layout_alignBaseline="@id/tvduration"
        android:id="@+id/tvduration2"
        android:background="#F12322"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textSize="18dp"
        android:id="@+id/tvmaterialsavailable"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/tvduration"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="160dp"
        android:textSize="18dp"
        android:layout_alignBaseline="@id/tvmaterialsavailable"
        android:id="@+id/tvmaterialsavailable2"
        android:background="#F12322"/>
</RelativeLayout>
