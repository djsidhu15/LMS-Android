<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sid.lms.PM_Main_Activity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Project Manager Dashboard:"
    android:textSize="22dp"
    android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Approve Courses"
        android:id="@+id/bPMapprovecourses"
        android:layout_marginTop="100dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="View the status of:"
    android:textSize="22dp"
    android:layout_marginTop="190dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trainees"
        android:id="@+id/btraineestatus"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="40dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trainers"
        android:id="@+id/btrainersstat"
        android:layout_alignBaseline="@id/btraineestatus"
        android:layout_toRightOf="@id/btraineestatus"
        android:layout_marginLeft="80dp"/>
</RelativeLayout>
