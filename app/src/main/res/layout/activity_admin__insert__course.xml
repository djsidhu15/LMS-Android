<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sid.lms.Admin_Insert_Course">

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvcourseno"
        android:text="Course No:"
        android:textSize="22dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etcourseno"
        android:layout_alignBaseline="@+id/tvcourseno"
        android:layout_marginLeft="120dp"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvcoursetitle"
        android:text="Title:"
        android:layout_below="@+id/tvcourseno"
        android:textSize="22dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etcoursetitle"
        android:layout_alignBaseline="@+id/tvcoursetitle"
        android:layout_marginLeft="120dp"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvcourseduration"
        android:text="Duration:"
        android:layout_below="@+id/tvcoursetitle"
        android:textSize="22dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etcourseduration"
        android:layout_alignBaseline="@+id/tvcourseduration"
        android:layout_marginLeft="120dp"
        android:textSize="22dp"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvcoursedescription"
        android:text="Description:"
        android:layout_below="@+id/tvcourseduration"
        android:textSize="22dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/etcoursedescription"
        android:layout_below="@+id/tvcoursedescription"
        android:inputType="textMultiLine"
        android:background="#FAAFAF"
        android:textSize="22dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert"
        android:layout_below="@+id/etcoursedescription"
        android:id="@+id/binsertcourse"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:id="@+id/bviewcourse"
        android:layout_toRightOf="@id/binsertcourse"
        android:layout_alignBaseline="@id/binsertcourse"/>

</RelativeLayout>
