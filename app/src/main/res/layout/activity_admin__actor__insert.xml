<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sid.lms.Admin_Actor_Insert">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actor Insert"
        android:textSize="25dp"
        android:id="@+id/tvactortitle"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LoginID:"
        android:textSize="22dp"
        android:layout_below="@+id/tvactortitle"
        android:layout_marginTop="30dp"
        android:id="@+id/tvactorloginid"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvactorloginid"
        android:layout_toRightOf="@+id/tvactorloginid"
        android:id="@+id/etactorloginid"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textSize="22dp"
        android:layout_below="@+id/tvactorloginid"
        android:layout_marginTop="30dp"
        android:id="@+id/tvactorpassword"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvactorpassword"
        android:layout_toRightOf="@+id/tvactorpassword"
        android:inputType="textPassword"
        android:id="@+id/etactorpassword"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actor No.:"
        android:textSize="22dp"
        android:layout_below="@+id/tvactorpassword"
        android:layout_marginTop="30dp"
        android:id="@+id/tvactorname"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvactorname"
        android:layout_toRightOf="@+id/tvactorname"
        android:id="@+id/etactorname"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert"
        android:id="@+id/bactorinsert"
        android:layout_below="@+id/tvactorname"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:id="@+id/bactorview"
        android:layout_alignBaseline="@+id/bactorinsert"
        android:layout_toRightOf="@+id/bactorinsert"
        android:layout_marginLeft="70dp"/>
</RelativeLayout>
